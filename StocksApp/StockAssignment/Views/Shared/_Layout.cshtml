<!DOCTYPE html>
<html lang="en">

<head>
    <meta http-equiv="content-language" content="en">
    <meta charset="UTF-8">
    <meta name="description" content="@(ViewBag.description ?? "Default description")" />

    <meta name="page-topic" content="Media">
    <meta name="page-type" content="Blogging">
    <meta name="audience" content="Everyone">
    <meta name="robots" content="index, follow">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://unpkg.com/@@tailwindcss/browser@4"></script>
    <title>@ViewBag.title</title>
</head>

<body>
    <main class="flex flex-col h-screen">
        <nav class="flex items-center justify-between bg-gray-800 text-white">
            <a class="flex items-center gap-1 p-5 hover:cursor-pointer" href="~/">
                <img src="~/assets/logo.svg" alt="logo" class="w-10 h-10">
                <h1 class="text-4xl font-bold">
                    Stocks
                </h1>
            </a>
            <a class="flex items-center gap-1 p-5 hover:cursor-pointer hover:underline" href="~/">
                Login
            </a>
        </nav>
        <div class="p-2 overflow-scroll">
            @RenderBody()
        </div>
    </main>

</body>

</html>