@using ViewAssignmentWeather.Models;
@model List<CityWeather>;
@{
    Dictionary<string, string> bgcolor = new Dictionary<string, string> {{ "blue", "bg-blue-300" },{ "green",
"bg-[#d7ff79]"},{"red" , "bg-[#f5c448]"}};
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://unpkg.com/@@tailwindcss/browser@4"></script>
    <title>Weather Home</title>
</head>

<body class="p-2">
    <h1 class="text-3xl font-bold">Weather</h1>
    <div class="flex items-center h-screen justify-center gap-4">
        @foreach (CityWeather item in Model)
        {
            var currentBgColor = "";
            switch (item.TempretureFahrenheit)
            {
                case var temp when temp < 44:
                    currentBgColor = bgcolor["blue"];
                    break;
                case var temp when temp >= 44 && temp < 74:
                    currentBgColor = bgcolor["green"];
                    break;
                case var temp when temp >= 74:
                    currentBgColor = bgcolor["red"];
                    break;
            }
            <div class="@currentBgColor grid grid-cols-3 items-start p-4 rounded-sm">
                <div class="w-[80px]">
                    <div class="font-semibold text-lg">@item.CityName</div>
                    <div class="text-zinc-700 text-sm">@item.DateAndTime.ToShortTimeString()</div>
                    <a href="/weather/@item.CityUniqueCode" class="text-xs text-blue-600 mt-2">Details</a>
                </div>
                <div class="border-r-[1px] border-r-white h-full mx-5"></div>
                <div class="font-semibold mt-3">
                    <span class="">@item.TempretureFahrenheit</span>
                    <span class="text-zinc-500">
                        <sup>o</sup>F
                    </span>
                </div>
            </div>
        }
    </div>
</body>