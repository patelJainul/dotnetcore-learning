            </div>
        </div>

        <!-- Version Info -->
        <div class="text-center text-gray-500 text-sm">
            <p>Contacts Manager v1.0.0</p>
            <p>© @DateTime.Now.Year - All Rights Reserved</p>
        </div>
    </div>
</div>