@{
    ViewBag.Title = "About Us";
}

<div class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="text-center mb-10">
            <h1 class="text-4xl font-bold text-gray-800 mb-3">About Contacts Manager</h1>
            <div class="h-1 w-24 bg-blue-500 mx-auto"></div>
        </div>

        <!-- Introduction Section -->
        <div class="bg-white rounded-lg shadow-md p-8 mb-10">
            <div class="flex flex-col md:flex-row items-center">
                <div class="md:w-1/3 flex justify-center mb-6 md:mb-0">
                    <div class="w-40 h-40 bg-blue-100 rounded-full flex items-center justify-center">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                            stroke="currentColor" class="w-24 h-24 text-blue-600">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                d="M15 19.128a9.38 9.38 0 0 0 2.625.372 9.337 9.337 0 0 0 4.121-.952 4.125 4.125 0 0 0-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 0 1 8.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0 1 11.964-3.07M12 6.375a3.375 3.375 0 1 1-6.75 0 3.375 3.375 0 0 1 6.75 0Zm8.25 2.25a2.625 2.625 0 1 1-5.25 0 2.625 2.625 0 0 1 5.25 0Z" />
                        </svg>
                    </div>
                </div>
                <div class="md:w-2/3 md:pl-8">
                    <h2 class="text-2xl font-semibold text-gray-700 mb-4">Our Mission</h2>
                    <p class="text-gray-600 mb-4">
                        Contacts Manager is a modern, user-friendly application designed to help you organize and manage
                        your personal and professional contacts effectively.
                        Our mission is to provide a simple yet powerful tool that makes contact management effortless.
                    </p>
                    <p class="text-gray-600">
                        With our intuitive interface, you can easily add, edit, delete, and search through your
                        contacts, making it the perfect solution for individuals and small businesses alike.
                    </p>
                </div>
            </div>
        </div>

        <!-- Features Section -->
        <h2 class="text-2xl font-bold text-gray-800 mb-6">Key Features</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-10">
            <!-- Feature 1 -->
            <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition duration-300">
                <div class="flex items-start">
                    <div class="flex-shrink-0 mr-4">
                        <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-500" fill="none"
                                viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                            </svg>
                        </div>
                    </div>
                    <div>
                        <h3 class="text-lg font-semibold text-gray-700 mb-2">Easy Contact Management</h3>
                        <p class="text-gray-600">
                            Add, edit, and remove contacts with just a few clicks. Organize your contacts with a clean,
                            responsive interface.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Feature 2 -->
            <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition duration-300">
                <div class="flex items-start">
                    <div class="flex-shrink-0 mr-4">
                        <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-500" fill="none"
                                viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                            </svg>
                        </div>
                    </div>
                    <div>
                        <h3 class="text-lg font-semibold text-gray-700 mb-2">Powerful Search</h3>
                        <p class="text-gray-600">
                            Find contacts instantly with our advanced search functionality. Filter by name, email,
                            country, and more.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Feature 3 -->
            <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition duration-300">
                <div class="flex items-start">
                    <div class="flex-shrink-0 mr-4">
                        <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-500" fill="none"
                                viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M3 4h13M3 8h9m-9 4h9m5-4v12m0 0l-4-4m4 4l4-4" />
                            </svg>
                        </div>
                    </div>
                    <div>
                        <h3 class="text-lg font-semibold text-gray-700 mb-2">Smart Sorting</h3>
                        <p class="text-gray-600">
                            Sort your contacts by various parameters like name, email, age, or country to quickly find
                            what you need.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Feature 4 -->
            <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition duration-300">
                <div class="flex items-start">
                    <div class="flex-shrink-0 mr-4">
                        <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-500" fill="none"
                                viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
                            </svg>
                        </div>
                    </div>
                    <div>
                        <h3 class="text-lg font-semibold text-gray-700 mb-2">Instant Feedback</h3>
                        <p class="text-gray-600">
                            Get immediate notifications for all your actions with our toast notification system,
                            enhancing your user experience.
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Team Section -->
        <h2 class="text-2xl font-bold text-gray-800 mb-6">Our Team</h2>
        <div class="bg-white rounded-lg shadow-md p-8 mb-10">
