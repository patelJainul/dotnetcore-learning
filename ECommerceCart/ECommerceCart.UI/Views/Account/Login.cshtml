@model LoginDTO;
@{
    ViewData["Title"] = "Login";
}

<h2 class="text-2xl font-bold mb-4">Login</h2>

<form asp-controller="Account" asp-action="Login" method="post" class="space-y-4">
    <div class="flex flex-col">
        <label asp-for="Email" class="text-sm font-medium text-gray-700"></label>
        <input asp-for="Email"
            class="mt-1 p-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
        <span asp-validation-for="Email" class="text-sm text-red-500 mt-1"></span>
    </div>
    <div class="flex flex-col">
        <label asp-for="Password" class="text-sm font-medium text-gray-700"></label>
        <input asp-for="Password" type="password"
            class="mt-1 p-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
        <span asp-validation-for="Password" class="text-sm text-red-500 mt-1"></span>
    </div>

    <button type="submit"
        class="w-full bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600 transition">Login</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}